@model IEnumerable<Mvc_MongoDB.Models.Item>

@{
    ViewBag.Title = "Get";
}

<h2>Menu</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantidadeItem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantidadeItem)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
